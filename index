    <!-- Mobile Footer -->
    <div class="md:hidden p-6 border-t border-gray-100 bg-gray-50">
        <input type="text" onkeyup="searchBlogs()" id="blogSearchMobile" placeholder="Search blogs..." class="w-full bg-white border border-gray-200 py-3 px-4 rounded mb-6">
        <div class="flex justify-around text-xs font-bold uppercase tracking-widest text-gray-500">
            <a href="https://instagram.com">Instagram</a>
            <a href="https://linkedin.com">LinkedIn</a>
            <span onclick="toggleArchive()" class="text-blue-600">Archive</span>
        </div>
    </div>

    <script>
        function searchBlogs() {
            const input = document.getElementById('blogSearch').value || document.getElementById('blogSearchMobile').value;
            const filter = input.toLowerCase();
            const posts = document.getElementsByClassName('blog-post');

            for (let i = 0; i < posts.length; i++) {
                const heading = posts[i].getElementsByClassName('blog-heading')[0];
                if (heading.innerText.toLowerCase().indexOf(filter) > -1) {
                    posts[i].classList.remove('hidden-post');
                } else {
                    posts[i].classList.add('hidden-post');
                }
            }
        }

        let archiveOpen = false;
        function toggleArchive() {
            const posts = document.getElementsByClassName('blog-post');
            const label = document.getElementById('archiveLabel');
            archiveOpen = !archiveOpen;
            
            // Starts from index 1 (hiding/showing everything except the very first post)
            for (let i = 1; i < posts.length; i++) {
                if (archiveOpen) {
                    posts[i].classList.remove('hidden-post');
                    label.innerText = "Hide Archive";
                } else {
                    posts[i].classList.add('hidden-post');
                    label.innerText = "View Older Posts";
                }
            }
        }
    </script>
